source "http://rubygems.org"

gem "json" # data serialization
gem "activerecord" # ORM
gem "activesupport" # helper methods from Rails
gem 'sinatra' # Rails-like web framework
gem "sinatra-contrib" # Sinata extensions. Used here to match multiple routes to a single endpoint
gem "geocoder" # ActiveRecord geocoder
gem "google-api-client" # For Google Calendar and Google Maps
gem "awesome_print" # nice HTML dumps of ruby objects, with syntax highlighting. Defines `ap` and `ai` methods.
gem "colored" # ANSI coloring of text, for console output
gem "dotenv" # environment variable loading. See .env.example file
gem "rack-ssl-enforcer" # force SSL

